{
  "manifest_version": 3,
  "name": "Lorem Your Page",
  "description": "This extension lorem your page content",
  "version": "1.01",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {},
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
